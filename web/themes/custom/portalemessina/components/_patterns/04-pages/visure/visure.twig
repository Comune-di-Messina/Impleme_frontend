{% set dist_url = dist_url|default('/themes/custom/portalemessina/dist/') %}
<div class="page-scheda-visure{{ pl ? ' h-section-servizi' }}">

  {% include "@molecules/01-modules/hero/hero-simple/hero-simple.twig" with {
    breadcrumbs: breadcrumbs,
    title: 'Visure',
    content: '',
    image: '<img src="' ~ dist_url ~ 'images/hero/visure.jpg">',
    back: '<a href="/it/servizi/messina">Torna indietro</a>'
  } %}

  {% if visure_nucleofam %}
  <div class="scheda-tabs">
    <div class="container">
      <ul class="tab-navigation">
        <li class="tab-element"><a href="{{ visure_dati }}" data-show="block_1" class="active">Dati personali</a></li>
        <li class="tab-element"><a href="{{ visure_nucleofam }}" data-show="block_2" class="">Visure nucleo familiare</a></li>
      </ul>
    </div>
  </div>
  {% endif %}

  <div class="container py-5">
    {% if errore %}
      <div class="alert alert-danger mt-4" role="alert">
        {{ errore }}
      </div>
    {% else %}

      {% include "@molecules/01-modules/custom/card-visura-full/card-visura-full.twig" with {
        title: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiIndividuo.nome ~ ' ' ~ ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiIndividuo.cognome,
        subtitle: '-',
        anagrafica_luogo_nascita: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiNascita.denominazioneComune,

        anagrafica_data_nascita: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiNascita.dataNascita,
        anagrafica_codice_fiscale: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiIndividuo.codiceFiscale,
        anagrafica_sesso: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiIndividuo.sesso,
        anagrafica_stato_civile: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiStatoCivile.statoCivile.statoCivileDescrizione,

        residenza_nazione: ricercaSoggettiResponse.individuoCompleto.indirizzoResidenza.siglaProvinciaStato,
        residenza_comune: ricercaSoggettiResponse.individuoCompleto.indirizzoResidenza.denominazioneComune,
        residenza_indirizzo: ricercaSoggettiResponse.individuoCompleto.indirizzoResidenza.indirizzo,
        residenza_cap: ricercaSoggettiResponse.individuoCompleto.indirizzoResidenza.cap,

        immigrazione_data: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiImmigrazione.dataImmigrazione,
        immigrazione_nazione: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiImmigrazione.siglaProvinciaStato,
        immigrazione_comune: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiImmigrazione.denominazioneComune,
        immigrazione_pratica: ricercaSoggettiResponse.individuoCompleto.datiSoggetto.datiImmigrazione.numeroPraticaImmigrazione

      } %}

    {% endif %}

    {{ formQualcosaNonTorna }}

  </div>

</div>
