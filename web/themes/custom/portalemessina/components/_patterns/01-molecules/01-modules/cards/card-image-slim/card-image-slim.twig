{%
  set classes = [
  'module',
  'card card-img card-img-slim',
  'no-after d-block d-md-flex flex-row flex-row-reverse rounded shadow'
]
%}

<div {{ attributes.addClass(classes) }}>
  <div class="card-image col-sm-12 col-md-6 p-0">
    {{ image }}
  </div>
  <div class="card-content-wrapper col-sm-12 col-md-6 order-md-1 d-flex flex-column">
    {% if category|render %}
      <div class="head-tags mb-3">
        <span class="card-tag px-3">{{ category }}</span>
      </div>
    {% endif %}
    {% if title|render %}
      <h3 class="card-title">{{ title }}</h3>
    {% endif %}
    {% if content|render %}
      <div class="card-content text-serif">
        {{ (content|render|striptags)|slice(0, 150) }}
      </div>
    {% endif %}
    {% if content_note|render %}
      <div class="card-content-note">
        {{ content_note }}
      </div>
    {% endif %}
    {% if link|render %}
      <div class="card-link">
        {{ link }}
      </div>
    {% endif %}
  </div>
</div>